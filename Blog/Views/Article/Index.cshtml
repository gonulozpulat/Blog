@model PostDetailViewModel
@if (Model != null)
{
    <section class="site-section py-lg">
        <div class="container">
            <div class="row blog-entries">
                <div class="col-md-12 col-lg-8 main-content">
                    <h1 class="mb-4">@Model.Article.ArticleTitle</h1>
                    <div class="post-meta"> 
                        <span class="category">@Model.Article.CategoryName</span>                            
                        <span class="mr-2">@Model.Article.CreatedDate</span> &bullet;
                        <span class="ml-2"><span class="fa fa-comments"></span></span>
                    </div>
                    <div class="post-content-body">
                        <p>@Model.Article.ArticleDescription</p>                        
                        <div class="row mb-5">
                            <div class="col-md-12 mb-4 element-animate">
                                <img src="@Model.Article.ArticleImagePathUrl" alt="Image placeholder" class="img-fluid">
                            </div>                            
                        </div>
                    </div>
                    <div class="pt-5">
                        <p>Kategori:  <a href="@Url.Action("Index","Category", new { @Model.Article.CategoryId})">@Model.Article.CategoryName</a> 
                        Etiketler:
                        @foreach (var item in Model.Article.TagList)
                        {
                            @item.Name
                        }

                        <a href="#">#manila</a>, <a href="#">#asia</a></p>
                    </div>
                    <div class="pt-5">
                        @if (Model.Comments.Any())
                        {
                            <h3 class="mb-5">Yorumlar @Model.Comments.Count</h3>
                            <ul class="comment-list">
                                @foreach (var item in Model.Comments)
                                {
                                    <li class="comment">
                                        <div class="vcard">
                                            <img src="https://via.placeholder.com/700x700" alt="Image placeholder">
                                        </div>
                                        <div class="comment-body">
                                            <h3>@item.Name @item.Surname</h3>
                                            <p>@item.Message</p>
                                        </div>
                                    </li>
                                }
                            </ul>
                        }
                        <!-- END comment-list -->
                    <div class="comment-form-wrap pt-5">
                        <h3 class="mb-5">Yorum Yap</h3>
                        @using (Html.BeginForm(FormMethod.Post))
                        {
                            @Html.HiddenFor(model=>model.Article.Id)
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Comment.Name, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Comment.Name, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Comment.Surname, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Comment.Surname, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Comment.Email, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Comment.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Comment.Message, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Comment.Message, "", new { @class = "text-danger", @cols = "30", @rows = "10" })

                                
                               @* @Html.HiddenFor(model => model.hdnFlag, new { value = Model.hdnFlag })*@

                                

                            </div>
                            <div class="form-group">
                                <input type="submit" value="Gönder" class="btn btn-primary">
                            </div>

                        }
                    </div>
                    </div>
                </div>
                <!-- END main-content -->
            </div>
        </div>
    </section>
}

