@model PostDetailViewModel
@if (Model != null)
{
    <section class="site-section py-lg">
        <div class="container">
            <div class="row blog-entries">
                <div class="col-md-12 col-lg-8 main-content">
                    <h1 class="mb-4">@Model.Article.ArticleTitle</h1>
                    <div class="post-meta"> 
                        <span class="category">@Model.Article.CategoryName</span>                            
                        <span class="mr-2">@Model.Article.CreatedDate</span> &bullet;
                        <span class="ml-2"><span class="fa fa-comments"></span></span>
                    </div>
                    <div class="post-content-body">
                        <p>@Model.Article.ArticleDescription</p>                        
                        <div class="row mb-5">
                            <div class="col-md-12 mb-4 element-animate">
                                <img src="@Model.Article.ArticleImagePathUrl" alt="Image placeholder" class="img-fluid">
                            </div>                            
                        </div>                        
                    </div>
                    <div class="pt-5">
                        <p>Kategori:  <a href="@Url.Action("Index","Category", new { @Model.Article.CategoryId})">@Model.Article.CategoryName</a>  Etiketler: <a href="#">#manila</a>, <a href="#">#asia</a></p>
                    </div>
                    <div class="pt-5">
                        @if (Model.Comments.Any())
                        {
                            <h3 class="mb-5">Yorumlar @Model.Comments.Count</h3>
                            <ul class="comment-list">
                                @foreach (var item in Model.Comments)
                                {
                                    <li class="comment">
                                        <div class="vcard">
                                            <img src="https://via.placeholder.com/700x700" alt="Image placeholder">
                                        </div>
                                        <div class="comment-body">
                                            <h3>@item.Name @item.Surname</h3>
                                            <p>@item.Message</p>
                                        </div>
                                    </li>
                                }
                            </ul>
                        }
                        <!-- END comment-list -->
                        <div class="comment-form-wrap pt-5">
                            <h3 class="mb-5">Leave a comment</h3>
                            <form action="#" class="p-5 bg-light">
                                <div class="form-group">
                                    <label for="name">Name *</label>
                                    <input type="text" class="form-control" id="name">
                                </div>
                                <div class="form-group">
                                    <label for="email">Email *</label>
                                    <input type="email" class="form-control" id="email">
                                </div>
                                <div class="form-group">
                                    <label for="website">Website</label>
                                    <input type="url" class="form-control" id="website">
                                </div>
                                <div class="form-group">
                                    <label for="message">Message</label>
                                    <textarea name="" id="message" cols="30" rows="10" class="form-control"></textarea>
                                </div>
                                <div class="form-group">
                                    <input type="submit" value="Post Comment" class="btn btn-primary">
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
                <!-- END main-content -->
            </div>
        </div>
    </section>
}

