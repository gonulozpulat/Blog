@model HomeIndexViewModel
@{
    ViewBag.Title = "Anasayfa";
}
@if(Model != null) {
    <section class="site-section pt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="owl-carousel owl-theme home-slider">
                        @if(Model.Category.Any())
                        {
                            
                            foreach (var item in Model.Category)
                            {
                                <div>
                                    <a href="@Url.Action("Index","Category",new { @item.Id})" class="a-block d-flex align-items-center height-lg" style="background-image: url('@item.CategoryImagePathUrl'); ">
                                        <div class="text half-to-full">
                                            <h3>@item.CategoryName</h3>
                                            <p>@item.CategoryDescription</p>
                                        </div>
                                    </a>
                                </div>
                            }                            
                        }
                    </div>
                </div>
            </div> 
            @if (Model.Category.Any())
            {
                <div class="row">
                    @foreach (var item in Model.Category)
                    {
                        <div class="col-md-6 col-lg-4">
                            <a href="@Url.Action("Index","Category",new { @item.Id})" class="a-block d-flex align-items-center height-md" style="background-image: url('@item.CategoryImagePathUrl'); "></a>
                            <div class="text">
                                <div class="post-meta">
                                    <span>@item.CategoryName</span>
                                </div>
                            </div>
                        </div>
                    }
                </div>   
            }

        </div>
    </section>
    <!-- END section -->
    <section class="site-section py-sm">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h2 class="mb-4">Gönderiler</h2>
                </div>
            </div>
            <div class="row blog-entries">
                <div class="col-md-12 col-lg-12 main-content">
                    @if (Model.Category.Any())
                    {
                        <div class="row">
                            @foreach (var item in Model.Article)
                            {
                                <div class="col-md-6">
                                    <a href="@Url.Action("Index","Article",new {@item.Id})" class="blog-entry element-animate" data-animate-effect="fadeIn">
                                        <img src="@item.ArticleImagePathUrl" alt="Image placeholder">
                                        <div class="blog-content-body">
                                            <div class="post-meta">
                                                <span class="category">@item.CategoryName</span>
                                                <span class="mr-2">@item.CreatedDate</span> &bullet;                                                
                                                <span class="ml-2"><span class="fa fa-comments"></span> 3</span>                                                    
                                            </div>
                                            <h2>@item.ArticleTitle</h2>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>

                    }
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <nav aria-label="Page navigation" class="text-center">
                                <ul class="pagination">
                                    <li class="page-item  active"><a class="page-link" href="#">Prev</a></li>
                                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
                <!-- END main-content -->
            </div>
        </div>
    </section>
}