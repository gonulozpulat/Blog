@model CategoryViewModel
@if (Model != null)
{
    <section class="site-section">
        <div class="container">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h2 class="mb-4">Kategori: @Model.Category.CategoryName </h2>
                </div>
            </div>
            <div class="row blog-entries">
                <div class="col-md-12 col-lg-12 main-content">
                    <div class="row mb-5 mt-5">
                        <div class="col-md-12">                            
                            @if (Model.Article.Any())
                            {                                
                                foreach (var item in Model.Article)
                                {
                                    if (item.CategoryId == Model.Category.Id)
                                    {
                                        <div class="post-entry-horzontal">
                                            <a href="@Url.Action("Index","Article",new { @item.Id})">
                                                <div class="image element-animate" data-animate-effect="fadeIn" style="background-image: url(@item.ArticleImagePathUrl);"></div>
                                                <span class="text">
                                                    <div class="post-meta">
                                                        <span class="category">@item.CategoryName</span>
                                                        <span class="mr-2">@item.CreatedDate</span> &bullet;
                                                        @*<span class="ml-2"><span class="fa fa-comments"></span> 3</span>*@
                                                    </div>
                                                    <h2>@item.ArticleTitle</h2>
                                                </span>
                                            </a>
                                        </div>
                                    }
                                }
                            }                            
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <nav aria-label="Page navigation" class="text-center">
                                <ul class="pagination">
                                    <li class="page-item  active"><a class="page-link" href="#">Prev</a></li>
                                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item"><a class="page-link" href="#">Next</a></li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
